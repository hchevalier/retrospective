<!DOCTYPE html>
<html>
  <head>
    <title>Retrospective</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script>
      window.constants = {
        allColors: JSON.parse('<%= Participant::ALL_COLORS.to_json.html_safe %>'),
        emojiList: JSON.parse('<%= Reaction::EMOJI_LIST.to_json.html_safe %>'),
        voteEmoji: '<%= Reaction::VOTE_EMOJI %>',
        unvoteEmoji: '<%= Reaction::UNVOTE_EMOJI %>',
        maxVotes: <%= Reaction::MAX_VOTES %>,
        googleAuthenticationEnabled: "<%= google_authentication_enabled? %>"
      }
    </script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap' />
  </head>

  <body class='bg-gray-300'>
    <%= yield %>
  </body>
</html>
